[
    // Directional instructions
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateDown"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft"
    },
    // Ctrl + z zenmode in vscode
    {
        "key": "ctrl+a z",
        "command": "workbench.action.toggleEditorWidths"
    },
    {
        "key": "ctrl+a h",
        "command": "workbench.action.focusLeftGroup"
    },
    {
        "key": "ctrl+a j",
        "command": "workbench.action.focusAboveGroup"
    },
    {
        "key": "ctrl+a k",
        "command": "workbench.action.focusBelowGroup"
    },
    {
        "key": "ctrl+a l",
        "command": "workbench.action.focusRightGroup"
    },
    {
        "key": "ctrl+shift+h",
        "command": "workbench.action.moveActiveEditorGroupLeft"
    },
    {
        "key": "ctrl+shift+j",
        "command": "workbench.action.moveActiveEditorGroupDown"
    },
    {
        "key": "ctrl+shift+k",
        "command": "workbench.action.moveActiveEditorGroupUp"
    },
    {
        "key": "ctrl+shift+l",
        "command": "workbench.action.moveActiveEditorGroupRight"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.files.action.focusOpenEditorsView",
        "when": "sideBarFocus && explorerViewletVisible"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "sideBarFocus && explorerViewletVisible && !filesExplorerFocus"
    },
    {
        "key": "ctrl+a s",
        "command": "workbench.action.splitEditorDown"
    },
    {
        "key": "ctrl+a v",
        "command": "workbench.action.splitEditorRight"
    },
    {
        "key": "ctrl+a t",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+a b",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "ctrl+a o",
        "command": "workbench.action.focusSideBar"
    },
    {
        "key": "ctrl+a c",
        "command": "workbench.action.toggleMultiCursorModifier"
    },
    {
        "key": "ctrl+a t",
        "command": "workbench.action.togglePanel",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus && terminalProcessSupported"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus && terminalProcessSupported"
    },
    {
        "key": "ctrl+a s",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus && terminalProcessSupported"
    },
    {
        "key": "ctrl+a ctrl+a",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+a ctrl+a",
        "command": "workbench.action.terminal.focus",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+a enter",
        "command": "explorer.openToSide",
        "when": "explorerViewLetFocus && explorerViewletVisable"
    },
    {
        "key": "j",
        "command": "list.focusDown",
        "when": "filesExplorerFocus"
    },
    {
        "key": "k",
        "command": "list.focusUp",
        "when": "filesExplorerFocus"
    },
    {
        "key": "l",
        "command": "list.expand",
        "when": "filesExplorerFocus"
    },
    {
        "key": "h",
        "command": "list.collapse",
        "when": "filesExplorerFocus"
    },
    {
        "key": "enter",
        "command": "list.select",
        "when": "filesExplorerFocus"
    },
    {
        "key": "ctrl+shift+q",
        "command": "workbench.action.toggleMaximizedPanel"
    },
    {
        "before": ["leader", "w"],
        "commands": [
            "workbench.action.files.save"
        ]
    }
]