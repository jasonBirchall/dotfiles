# Aliases
# Add an alert alias for long running commands
alias bi='bundle install --path .bundle/gems --binstubs .bundle/bin'
alias cdw='cd ~/Documents/workarea'
alias cdd='cd ~/Documents/workarea/dotfiles'
alias cde='cd ~/Documents/workarea/environment'
alias cdi='cd ~/Documents/workarea/cloud-platform-infrastructure; infraenv'
alias cdp='cd $GOPATH'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias v="nvim"
alias vf="vifm"
alias vim="nvim"
alias vi="nvim"
alias :q="exit"

alias infraenv='source $HOME/Documents/workarea/temp/temp-clusters'
alias kops='infraenv; kops'
alias kopsexport='infraenv; rm ~/.kube/config; kops export kubecfg'
alias tf='terraform'
alias g='git'
alias gs='git status; git diff'
alias gd='git diff'
alias ga='git add'
alias gc='git commit'
alias k='kubectl'
complete -F __start_kubectl k
alias cdgo='cd $GOPATH'
alias cdu='cd ~/Documents/workarea/university-work'
alias yq="yq e '.' -"

alias tmux="TERM=screen-256color-bce tmux"
alias ranger='ranger --choosedir=$HOME/.rangerdir; LASTDIR=`cat $HOME/.rangerdir`; cd "$LASTDIR"'
alias r='ranger'
